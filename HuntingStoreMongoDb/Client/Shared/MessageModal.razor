
<div class="modal" id="messageModal" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Message</h5>
                <button type="button" class="btn btn-danger" data-dismiss="modal" aria-label="Close" @onclick="@CloseModal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <textarea class="form-control">@Message</textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="@CloseModal">Ok</button>
            </div>
        </div>
    </div>
</div>

@code {

    [Parameter]
    public EventCallback CloseModal { get; set; }

    [CascadingParameter]
    public string Message { get; set; }
}
